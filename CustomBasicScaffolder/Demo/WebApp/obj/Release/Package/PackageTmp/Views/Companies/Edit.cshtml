@section Scripts {
   
    <script type="text/javascript">
	    var $editform = $('#company_form');
        //save item
        function saveitem() {
            if ($editform.valid()) {
                var company = $editform.serializeJSON();
                  				  //获取明细表数据
				   
						if (!departments_endEditing())
								return false;                    
                        var departments = $departmentsdg.datagrid("getChanges");
						company.Departments = departments ;
				   
						if (!employee_endEditing())
								return false;                    
                        var employee = $employeedg.datagrid("getChanges");
						company.Employee = employee ;
				  				  
                var token = $('input[name="__RequestVerificationToken"]', $editform).val();
                 $.ajax({
                    type: "POST",
                    url: "/Companies/Edit",
                    data: {
                        __RequestVerificationToken: token,
                        company:company
                    },
                    dataType: 'json',
                    contentType: 'application/x-www-form-urlencoded; charset=utf-8',
                })
                .done(function (response) {
                    if (response.success) {
                        $.messager.alert("提示", "保存成功！");
                    } else {
                        $.messager.alert("错误", "保存失败！" + response.err, "error");
                    }
                    })
                .fail(function (response) {
                        $.messager.alert("错误", "保存失败！", "error");
                    });
            }
        }
        function cancelitem() {
        }
         function printitem() {
        }
        function exportexcel() {
        }
         function refreshitem() {
        }

 

     /********************************
     *
     * pageSetUp() is needed whenever you load a page.
     * It initializes and checks for all basic elements of the page
     * and makes rendering easier.
     *
     */
     pageSetUp();
     /********************************
     *
     * pagefunction() $editform 校验规则
     *
     */
     var pagefunction = function () {
            var errorClass = 'invalid';
            var errorElement = 'em';
            $editform.validate({
                 errorClass: errorClass,
                 errorElement: errorElement,
                 highlight: function (element) {
                    $(element).parent().removeClass('state-success').addClass("state-error");
                    $(element).removeClass('valid');
                 },
                 unhighlight: function (element) {
                    $(element).parent().removeClass("state-error").addClass('state-success');
                    $(element).addClass('valid');
                 },
                // Rules for form validation
                rules: {
                                    Id:{
                            required:true,
                                                        digits: true,
                                                                                                        },
                                    Name:{
                            required:false,
                                                                                    rangelength: [0, 50],
                                                                            },
                                    Address:{
                            required:false,
                                                                                    rangelength: [0, 50],
                                                                            },
                                    City:{
                            required:false,
                                                                                    rangelength: [0, 50],
                                                                            },
                                    Province:{
                            required:false,
                                                                                    rangelength: [0, 50],
                                                                            },
                                    RegisterDate:{
                            required:true,
                                                                                                                date: true,
                                                },
                                    Employees:{
                            required:true,
                                                        digits: true,
                                                                                                        },
                                    CreatedDate:{
                            required:false,
                                                                                                                date: true,
                                                },
                                    CreatedBy:{
                            required:false,
                                                                                    rangelength: [0, 20],
                                                                            },
                                    LastModifiedDate:{
                            required:false,
                                                                                                                date: true,
                                                },
                                    LastModifiedBy:{
                            required:false,
                                                                                    rangelength: [0, 20],
                                                                            },
                                },
                submitHandler: function (form) {
                    //调用保存方法
                      saveitem();
                      return false;
                    //$(form).ajaxSubmit({
                    //    success: function () {
                    //        console.log('ajaxSubmit success');
                    //   }
                    //});
                },
                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }

            });
        }
        pagefunction();



  </script>



}
 
