                           class="easyui-numberbox" type="text"
                           data-options="prompt:'Id',
                                 readonly:true,
                                width:200,
                                 label:'',required:true ,precision:0" />
                </td>
                <td class="control-label">   @Html.DisplayNameFor(model => model.Name)  </td>
                <td>
                    <input id="@Html.IdFor(model => model.Name)"
                           name="@Html.NameFor(model => model.Name)"
                           value="@Html.ValueFor(model => model.Name)"
                           tabindex="1"
                           class="easyui-textbox"
                           type="text"
                           data-options="prompt:'Name',
								 label:'',
                                width:200,
								 required:false ,validType:'length[0,50]'" />
                </td>
                <td class="control-label">   @Html.DisplayNameFor(model => model.Status)  </td>
                <td>
                    <input id="@Html.IdFor(model => model.Status)"
                           name="@Html.NameFor(model => model.Status)"
                           value="@Html.ValueFor(model => model.Status)"
                           tabindex="2"
                           class="form-control"
                           type="text"
                           data-options="prompt:'Status',
								 label:'',
                                width:200,
								 required:false ,validType:'length[0,50]'" />
                </td>
            </tr>
            <tr>
                <td class="control-label">   @Html.DisplayNameFor(model => model.StartDate)  </td>
                <td>
                    <input id="@Html.IdFor(model => model.StartDate)"
                           name="@Html.NameFor(model => model.StartDate)"
                           tabindex="3"
                           class="easyui-datebox"
                           type="text"
                           value="@Html.ValueFor(model => model.StartDate)"
                           data-options="prompt:'StartDate',
								 label:'',
                                width:200,
								 required:true,
								 formatter:dateformatter" />
                </td>
                <td class="control-label">   @Html.DisplayNameFor(model => model.EndDate)  </td>
                <td>
                    <input id="@Html.IdFor(model => model.EndDate)"
                           name="@Html.NameFor(model => model.EndDate)"
                           tabindex="4"
                           class="easyui-datebox"
                           type="text"
                           value="@Html.ValueFor(model => model.EndDate)"
                           data-options="prompt:'EndDate',
								 label:'',
                                width:200,
								 required:true,
								 formatter:dateformatter" />
                </td>
                <td class="control-label">   @Html.DisplayNameFor(model => model.Enableed)  </td>
                <td>
                    <label class="checkbox">
                        <input id="@Html.IdFor(model => model.Enableed)"
                               name="@Html.NameFor(model => model.Enableed)"
                               value="true" @(Model.Enableed ? "checked=\"checked\"" : "")
