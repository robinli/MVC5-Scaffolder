<script>

    $(function () {
        $('#Status').inputpicker({
            data: statusdatasource
        });
        $('#Status').inputpicker('resize',200);
    })

    //save item
    function saveitem() {
        if ($('#work_form').form('enableValidation').form('validate')) {
            var item = $('#work_form').serializeObject();

            $.post("/Works/Edit", item, function (response) {
                //console.log(response);
                if (response.success) {
                    $.messager.alert("提示", "保存成功！");
                    $('#detailswindow').window('close');

                } else {
                    $.messager.alert("错误", "保存失败！" + response.err, "error");
                }
            }, "json").fail(function (response) {
                //console.log(response);
                $.messager.alert("错误", "保存失败！", "error");
                //$dg.datagrid("reload");
            });
        }
    }
    // cancel
    function cancelitem() {
        $('#detailswindow').window('close');
    }
    // reload
    function refreshitem() {
        $('#detailswindow').window('close');
    }

</script>

