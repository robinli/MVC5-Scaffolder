﻿@model WebApp.Models.Work
<!-- 输出form表单界面 -->
<div id="detailswindow" hidden="hidden" class="easyui-window" title="明细数据" data-options="modal:true,closed:true,iconcls:'icon-menu'" style="width:960px;height:520px">
    <form id="work_form" class="smart-form easyui-form" method="post" data-options="novalidate:true">
        <table class="table table-bordered">
            <caption>
                <!--form toolbar-->
                <div id="form_toolbar" style="height:auto" class="datagrid-toolbar">
