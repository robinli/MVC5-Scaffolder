
@model WebApp.Models.CodeItem


<div class="ibox-content">
 <!--输出form表单界面-->
 <table class="table table-bordered">
     <caption>
     </caption>
     <tr>
     	  
  <td class="control-label">   @Html.DisplayNameFor(model => model.Id)  </td>
	   <td> 
			   											<input  disabled  id="@Html.IdFor(model => model.Id)" name="@Html.NameFor(model => model.Id)" tabindex="0" style="width:100%" class="easyui-numberbox" type="text" data-options="prompt:'Id',label:'Id:',required:true ,precision:0" />
								  
	  
  <td class="control-label">   @Html.DisplayNameFor(model => model.Code)  </td>
	   <td> 
			   
											<input id="@Html.IdFor(model => model.Code)" 
							name="@Html.NameFor(model => model.Code)" 
							value="@Html.ValueFor(model => model.Code)"
							tabindex="1" 
							style="width:100%" 
							class="easyui-textbox" 
							type="text" 
							data-options="prompt:'值',
								 label:'值:',
								 required:true ,validType:'length[0,20]'" />
					             
			 
     <tr>
     	  
  <td class="control-label">   @Html.DisplayNameFor(model => model.Text)  </td>
	   <td> 
			   
											<input id="@Html.IdFor(model => model.Text)" 
							name="@Html.NameFor(model => model.Text)" 
							value="@Html.ValueFor(model => model.Text)"
