			<input id="@Html.IdFor(model => model.BaseCodeId)"
			       name="@Html.NameFor(model => model.BaseCodeId)"
				   value="@Html.ValueFor(model => model.BaseCodeId)"
				   class="easyui-combobox" data-options="
						prompt:'类型' ,
						label:'类型:' ,
						required:true ,
						valueField: 'Id',
						textField: 'CodeType' ,
						url: '/BaseCodes/GetBaseCodes' ,
						onSelect: function(item){
						//console.log(item);
				}">

				
     <tr>
     	  
  <td class="control-label">   @Html.DisplayNameFor(model => model.CreatedDate)  </td>
