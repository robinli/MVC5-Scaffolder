							style="width:100%" 
							class="easyui-textbox" 
							type="text" 
							data-options="prompt:'描述',
								 label:'描述:',
								 required:true ,validType:'length[0,50]'" />
					             
			 
     <tr>
     	  
  <td class="control-label">   @Html.DisplayNameFor(model => model.IsDisabled)  </td>
