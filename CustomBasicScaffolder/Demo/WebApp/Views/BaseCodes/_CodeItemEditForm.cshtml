							style="width:100%" 
							class="easyui-textbox" 
							type="text" 
							data-options="prompt:'显示',
								 label:'显示:',
								 required:true ,validType:'length[0,20]'" />
					             
			 
	  
  <td class="control-label">   @Html.DisplayNameFor(model => model.Description)  </td>
