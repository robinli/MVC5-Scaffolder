@using WebApp.Models
@model AccountViewModel

@using (Html.BeginForm("Account", "Management", FormMethod.Post, new { @class = "form-inline", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder="Eメール" })
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "パスワード" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="登録" />
    </div>
}