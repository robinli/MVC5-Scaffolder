				        url: '/Products/GetData',
				        method: 'get',
				        onClickCell: onClickCell,
				        pagination: true,
                        striped:true,   
                        columns: [[
                         /*开启CheckBox选择功能*/
                         /*{ field: 'ck', checkbox: true },*/
                         { 
                            field: '_operate1',
                            title:'操作',
                            width: 120,
                            sortable: false,
