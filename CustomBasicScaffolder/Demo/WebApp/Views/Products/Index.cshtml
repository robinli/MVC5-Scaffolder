                formatter: filetypeformatter 
			},
			{
                 field:'UnitPrice', 
                 title:'@Html.DisplayNameFor(model => model.UnitPrice)', 
                 width:100, 
                 align:'right',
                 editor:{
                        type:'numberbox',
                        options:{prompt:'单价', required:true   ,precision:2 } 
                        },
                sortable:true,
                resizable:true 
			},
			{
                 field:'StockQty', 
                 title:'@Html.DisplayNameFor(model => model.StockQty)', 
                 width:100, 
                 align:'right',
                 editor:{
                        type:'numberbox',
                        options:{prompt:'库存', required:true    } 
                        },
                sortable:true,
                resizable:true 
			},
			{
               field:'IsRequiredQc', 
               title:'@Html.DisplayNameFor(model => model.IsRequiredQc)', 
               width:120, 
               align:'center',
               editor:{
                      type:'booleaneditor',
                      options:{
                                 prompt:'是否需要QC', 
                                 required:false
                               } 
                      },
                formatter:booleanformatter,
                sortable:true, 
                resizable:true 
			},
			{
                field:'ConfirmDateTime', 
                title:'@Html.DisplayNameFor(model => model.ConfirmDateTime)', 
                width:160, 
                align:'right', 
                editor:{
                      type:'datetimebox',
                      options:{prompt:'确认日期',required:true}  
                      },
                sortable:true, 
                resizable:true, 
                formatter:datetimeformatter 
			} ,
			{
                field:'CategoryId',
                title:'@Html.DisplayNameFor(model => model.CategoryId)',
                width:160, 
                sortable:true, 
                resizable:true,
                formatter:function(value,row) {
				        return row.CategoryName;
					},
			    editor:{
					    type:'combobox',
					    options:{
								prompt:'产品类别' ,
                                mode: 'remote',
								valueField:'Id',
								textField:'Name',
								method:'get',
								url:'/Products/GetCategories',
								required:true
							}
						}
			},
                         ]]
                 });

           $dg.datagrid("enableFilter",[
				{
					  field: "Id",
					  type: "numberbox",
					  op:['equal','notequal','less','lessorequal','greater','greaterorequal']
				  },
				{
					  field: "UnitPrice",
					  type: "numberbox",
					  op:['equal','notequal','less','lessorequal','greater','greaterorequal']
				  },
				{
					  field: "StockQty",
					  type: "numberbox",
					  op:['equal','notequal','less','lessorequal','greater','greaterorequal']
				  },
				{
					  field: "ConfirmDateTime",
					  type: "dateRange",
					  options: {
						  onChange: function (value) {
							    $dg.datagrid("addFilterRule", {
									  field: "ConfirmDateTime",
									  op: "between",
									  value: value
								  });
							   
							    $dg.datagrid("doFilter");
						  }
					  }
				  },
				{
					  field: "IsRequiredQc",
					  type: "booleanfilter"
     			 },
		   {
				 field: "CategoryId",
				 type:"combobox",
				 options:{
								valueField:"Id",
								textField:"Name",
								method:"get",
								url:"/Products/GetCategories",
								onChange: function (value) {
								if (value == "") {
									$dg.datagrid("removeFilterRule", "CategoryId");
								} else {
									$dg.datagrid("addFilterRule", {
										field: "CategoryId",
										op: "equal",
										value: value
								});
							}
							$dg.datagrid("doFilter");
						}
					}
		   },
		   ]);
	 });

	
		
  
			 </script>
