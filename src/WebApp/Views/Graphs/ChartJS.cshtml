                        reverse: false
                    },
                    animateRotate: false
                }
            };


            // pie chart example
            PieConfig = {
                type: 'pie',
                data: {
                    datasets: [
                        {
                            data: [
                                randomScalingFactor(),
                                randomScalingFactor(),
                                randomScalingFactor(),
                                randomScalingFactor(),
                                randomScalingFactor(),
                            ],
                            backgroundColor: [
                                "#F7464A",
                                "#46BFBD",
