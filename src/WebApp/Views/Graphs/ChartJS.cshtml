                        "Grey",
                        "Dark Grey"
                    ]
                },
                options: {
                    responsive: true,
                    legend: {
                        position: 'top',
                    }
                }
            };


            // polar chart example


            PolarConfig = {
                data: {
                    datasets: [
                        {
                            data: [
                                randomScalingFactor(),
                                randomScalingFactor(),
