        //获取初始化对象
        if (REQUIRBACKEND) {
            $.get("/Works/PopupCreate")
                .done(data => {
                    loadData(-1,data,"Added");
                 })
                .fail((jqXHR, textStatus, errorThrown) => {
                    $.messager.alert("错误",  errorThrown, "error");
                });
        } else {
