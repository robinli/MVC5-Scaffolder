                    StartDate: moment().format('YYYY-MM-DD HH:mm:00'), 
EndDate: null, 
Enableed: true, 
Completed: false, 
Hour: 8, 
Priority: 1, 
Score: 100, 
 
                };
           loadData(-1, item,"Added");   
        }
    }
